{
    "openapi": "3.0.0",
    "info": {
        "title": "agenda",
        "version": "1.0.0",
        "description": "Agenda API"
    },
    "contact": {
        "name": "Marco Coutinho",
        "url": "https://www.linkedin.com/in/coutinhomarco/",
        "email": "marquinco@outlook.com"
    },
    "servers": [
        {
            "url": "http://localhost:3001/",
            "description": "Test API"
        }
    ],
    "paths": {
        "/user": {
            "post": {
                "summary": "Realiza login",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/userLogin"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login realizado com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/loginSucess"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Credenciais inválidas",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/loginErrorCredentials"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Usuário não encontrado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/loginErrorUserNotFound"
                                }
                            }
                        }
                    }
                }
            },
            "delete":{
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "summary": "Deleta usuário",
                "headers": {
                    "Authorization": {
                        "type": "string",
                        "description": "Bearer token",
                        "required": true,
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Deletado com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/userDeleteSucess"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Usuário não encontrado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/userDeleteErrorNotFound"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Credenciais inválidas",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/userDeleteErrorCredentials"
                                }
                            }
                        }
                    }
                    }
                }
        },
        "/user/register": {
                "post": {
                    "summary": "Realiza registro",
                    "requestBody": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/userRegister"
                                }
                            }
                        }
                    },
                    "responses": {
                        "201": {
                            "description": "Registro realizado com sucesso",
                            "content": {
                                "application/json": {
                                    "schema": {
                                        "$ref": "#/components/schemas/userRegisterSucess"
                                    }
                                }
                            }
                        },
                        "400": {
                            "description": "Usuário já existe",
                            "content": {
                                "application/json": {
                                    "schema": {
                                        "$ref": "#/components/schemas/userRegisterErrorUserExists"
                                    }
                                }
                            }
                        }
    
                    }
                }
        },
        "/contact": {
            "post": {
                "summary": "Cria contato",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/newContact"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Contato realizado com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/newContactSucess"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Erro ao realizar contato",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/newContactError"
                                }
                            }
                        }
                    }
                }
            },
            "get": {
                "summary": "Lista contatos",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Lista de contatos",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "contacts": {
                                            "type": "array",
                                            "items": {
                                                "type": "object",
                                                "properties": {
                                                    "name": {
                                                        "type": "string"
                                                    },
                                                    "email": {
                                                        "type": "string",
                                                        "format": "email"
                                                    },
                                                    "phoneNumber":{
                                                        "type": "string"
                                                    },
                                                    "message": {
                                                        "type": "string"
                                                    }
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
        },
        "/contact/{id}":{
            "delete": {
                "parameters":                 [
                    {
                        "name": "userid",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "Authorization",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "summary": "Deleta contato",
                "responses": {
                    "200": {
                        "description": "Contato deletado com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/deleteContactSucess"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Contato não encontrado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/deleteContactErrorNotFound"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Credenciais inválidas",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/deleteContactErrorCredentials"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/tasks/search": {
            "post": {
                "parameters":                 [
                    {
                        "name": "query",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "Authorization",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "summary": "Busca tarefas com base na query"
        }},
        "/tasks": {
            "get": {
                "summary": "Busca tarefas",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ]
                
    }},
    "/tasks/{contactId}": {
        "get": {
            "summary": "Busca tarefa",
            "parameters": [
                {
                    "name": "contactId",
                    "in": "path",
                    "required": true,
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "name": "Authorization",
                    "in": "header",
                    "required": true,
                    "schema": {
                        "type": "string"
                    }
                }
            ]
        },
        "post": {
            "summary": "Cria tarefa",
            "parameters": [
                {
                    "name": "contactId",
                    "in": "path",
                    "required": true,
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "name": "Authorization",
                    "in": "header",
                    "required": true,
                    "schema": {
                        "type": "string"
                    }
                }
            ],
            "requestBody": {
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/newTask"
                        }
                    }
                }
            }
        },
        "put": {
            "summary": "Atualiza tarefa",
            "parameters": [
                {
                    "name": "contactId",
                    "in": "path",
                    "required": true,
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "name": "Authorization",
                    "in": "header",
                    "required": true,
                    "schema": {
                        "type": "string"
                    }
                }
            ],
            "requestBody": {
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/updateTask"
                        }
                    }
                }
            }
        },
        "delete": {
            "summary": "Deleta tarefa",
            "parameters": [
                {
                    "name": "contactId",
                    "in": "path",
                    "required": true,
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "name": "Authorization",
                    "in": "header",
                    "required": true,
                    "schema": {
                        "type": "string"
                    }
                }
            ]
        }
    },
    "components": {
        "schemas": {
            "newTask": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string",
                        "example": "Buy milk"
                    },
                    "description": {
                        "type": "string",
                        "example": "Buy milk"

                    },
                    "taskStartDate": {
                        "type": "string",
                        "format": "date",
                        "example": "2020-01-01"
                    },
                    "taskEndDate": {
                        "type": "string",
                        "format": "date",
                        "example": "2020-01-01"
                    },
                    "status": {
                        "type": "integer",
                        "example": 2
                    },
                    "tag": {
                        "type": "integer",
                        "example": 1
                    }
                }
            },
            "updateTask": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string",
                        "example": "Buy milk"
                    },
                    "description": {
                        "type": "string",
                        "example": "Buy milk"

                    },
                    "status": {
                        "type": "integer",
                        "example": 2
                    }
                }
            },
            "userLogin": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "marco@gmail.com"
                    },
                    "password": {
                        "type": "string",
                        "example": "12345678"
                    }
                }
            },
            "userRegister": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "User test"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "test@test.com"
                    },
                    "password": {
                        "type": "string",
                        "example": "12345678"
                    }
                }
            },
            "newContact": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "User test"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "test@test.com"
                     },
                    "phoneNumber": {
                        "type": "string",
                        "example": "12345678"
                    },
                    "userId": {
                        "type": "number",
                        "example": 1
                    }
                }
            },
            "loginSucess": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "Login realizado com sucesso"
                    }
                }
            },
            "loginErrorCredentials": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "Usuário ou senha inválidos"
                    }
                }
            },
            "loginErrorUserNotFound":{
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "Usuário não encontrado"
                    }
                }
            },
            "userDeleteSucess": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "Usuário deletado com sucesso"
                    }
                }
            },
            "userDeleteErrorNotFound": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "Usuário não encontrado"
                    }
                }
            },
            "userDeleteErrorCredentials": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "Credenciais inválidas"
                    }
                }
            },
            "userRegisterSucess": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "Usuário cadastrado com sucesso"
                    }
                }
            },
            "userRegisterErrorUserExists": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "Usuário já existe"
                    }
                }
            },
            "newContactSucess": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "Contato cadastrado com sucesso"
                    }
                }
            },
            "newContactError": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "Dados invalidos"
                    }
                }
            },
            "deleteContactSucess": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "Contato deletado com sucesso"
                    }
                }
            },
            "deleteContactErrorNotFound": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "Contato não encontrado"
                    }
                }
            },
            "deleteContactErrorCredentials": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "Credenciais inválidas"
                        }
                    }
                }
            }
        }
    }
}
        
    

    



    
